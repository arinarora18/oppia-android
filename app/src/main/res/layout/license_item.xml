<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <import type="android.view.View" />

    <variable
      name="viewModel"
      type="org.oppia.android.app.help.thirdparty.LicenseItemViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <TextView
        android:id="@+id/license_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/faq_content_margin_start"
        android:layout_marginEnd="@dimen/faq_content_margin_end"
        android:fontFamily="sans-serif-medium"
        android:onClick="@{(v) -> viewModel.clickOnLicenseItem()}"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="@{viewModel.licenseName}"
        android:textAlignment="viewStart"
        android:textColor="@color/oppiaPrimaryText"
        android:textSize="16sp" />

      <View
        android:id="@+id/license_divider_view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/oppiaFAQDivider" />
    </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
